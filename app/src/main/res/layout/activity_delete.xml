<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine3"
    android:padding="10dp"
    tools:context=".Delete">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/mine1"
        android:layout_margin="20dp"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
       <LinearLayout
           android:layout_marginBottom="10dp"
           android:padding="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@color/mine3"
           android:orientation="vertical">
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/imgProfil"
               android:layout_width="143dp"
               android:layout_height="137dp"
               android:src="@drawable/user"
               ></de.hdodenhof.circleimageview.CircleImageView>
           <TextView
               android:id="@+id/name"
               android:textColor="@color/mine1"
               android:textAlignment="center"
               android:textSize="30dp"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/f2"
               >

           </TextView>
       </LinearLayout>


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgProfil"
            android:fontFamily="@font/f2"
            android:text="Voullez vous vraiment supprimer cet utilisateur ?"
            android:textColor="@color/mine4"
            android:textAlignment="center"
            android:textSize="30dp" />
        <Button
            android:id="@+id/del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OUI"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>